<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:background="@drawable/cd_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">

        <ImageView
            android:id="@+id/countryFlag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:layout_gravity="center"
            android:src="@drawable/top_app_logo"
            android:padding="10dp">
        </ImageView>

        <TextView
            android:id="@+id/countryName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="---"
            android:layout_weight="27"
            android:textStyle="bold"
            android:textColor="@color/count_text"
            android:textSize="15sp"
            android:layout_gravity="center">
        </TextView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/countryTCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:text="-- Cases"
                android:layout_margin="1dp"
                android:textColor="@color/infection_color"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat">
            </TextView>

            <TextView
                android:id="@+id/countryTDeath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:text="-- Deaths"
                android:textColor="@color/death_color"
                android:layout_margin="1dp"
                android:textAlignment="viewStart"
                tools:ignore="RtlCompat">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:orientation="vertical">

            <TextView
                android:id="@+id/countryNCase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/infection_color"
                android:layout_gravity="center"
                android:text="-- Cases"
                android:layout_margin="1dp"
                android:textAlignment="viewEnd"
                tools:ignore="RtlCompat">
            </TextView>

            <TextView
                android:id="@+id/countryNDeath"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:text="-- Deaths"
                android:textColor="@color/death_color"
                android:layout_margin="1dp"
                android:textAlignment="viewEnd"
                tools:ignore="RtlCompat">
            </TextView>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>